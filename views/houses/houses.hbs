<div class="container-fluid">

  <div class="row">

 <div class="col-2 list-group">
       {{#each states}}
      <a class="list-group-item list-group-item-action" href="{{this.acronym}}">{{this.name}}</a>
      {{/each}}
  </div>

    <div class="col-9">
      {{#each house}}
      {{#if imagePath}}
      <img src="{{this.imagePath}}">
      {{/if}}
      <p>Title:{{this.title}}</p>
      <p>Price: {{this.price}}</p>
      <p>Motive: {{this.motive}}</p>
      <p>State: {{this.state}}</p>
      <p>Pets ok: {{this.pets}}</p>
      <p>Laundry on site: {{this.laundry}}</p>
      <p>Available now: {{this.available}}</p>
      <p>Description: {{this.description}}.</p>
      {{/each}}
    </div>

  </div>

</div>



